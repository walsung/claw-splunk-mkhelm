<dashboard version="1.1" theme="dark">
  <label>OpenClaw Operations</label>
  <description>OpenClaw gateway log monitoring â€” auto-generated by openclaw-k8s skill</description>

  <row>
    <panel>
      <title>ğŸ“ˆ Log Volume (last 24h)</title>
      <chart>
        <search>
          <query>index=main sourcetype=openclaw | timechart span=5m count AS "Events"</query>
          <earliest>-24h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">line</option>
        <option name="charting.legend.placement">bottom</option>
      </chart>
    </panel>
    <panel>
      <title>ğŸ¯ Log Level Breakdown</title>
      <chart>
        <search>
          <query>index=main sourcetype=openclaw | rex "(?i)(?P&lt;level&gt;DEBUG|INFO|WARN|WARNING|ERROR|FATAL)" | stats count by level | sort -count</query>
          <earliest>-24h</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>
  </row>

  <row>
    <panel>
      <title>ğŸš¨ Recent Errors and Warnings</title>
      <table>
        <search>
          <query>index=main sourcetype=openclaw | rex "(?i)(?P&lt;level&gt;ERROR|WARN|FATAL)" | where isnotnull(level) | table _time, level, _raw | head 25</query>
          <earliest>-24h</earliest>
          <latest>now</latest>
        </search>
      </table>
    </panel>
  </row>

  <row>
    <panel>
      <title>ğŸ”„ Gateway Lifecycle Events</title>
      <table>
        <search>
          <query>index=main sourcetype=openclaw (gateway OR start OR stop OR restart OR crash OR exit OR boot) | table _time, _raw | head 20</query>
          <earliest>-7d</earliest>
          <latest>now</latest>
        </search>
      </table>
    </panel>
    <panel>
      <title>ğŸ“Š Event Rate (per minute)</title>
      <single>
        <search>
          <query>index=main sourcetype=openclaw | bucket _time span=1m | stats count AS events by _time | stats avg(events) AS "Avg Events/min"</query>
          <earliest>-1h</earliest>
          <latest>now</latest>
        </search>
        <option name="unit">events/min</option>
      </single>
    </panel>
  </row>

  <row>
    <panel>
      <title>ğŸ—‚ï¸ All Recent Events (last 50)</title>
      <table>
        <search>
          <query>index=main sourcetype=openclaw | table _time, _raw | head 50</query>
          <earliest>-1h</earliest>
          <latest>now</latest>
        </search>
      </table>
    </panel>
  </row>
</dashboard>
